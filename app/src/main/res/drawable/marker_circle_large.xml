<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">

            <solid android:color="#FFFFFF"/>
        </shape>
    </item>
    <item android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape
            android:shape = "oval">
            <size
                android:width="10dp"
                android:height="10dp"/>
            <solid android:color="#811414"/>
            <stroke android:color="#EA4235"
                android:width="2dp"/>
        </shape>
    </item>
</layer-list>